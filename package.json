{
  "name": "graphql-party",
  "version": "1.0.0-preview",
  "description": "A @decorator based GraphQL schema builder.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/j/graphql-party.git"
  },
  "author": "Jordan Stout",
  "license": "MIT",
  "scripts": {
    "test": "nyc mocha",
    "test:watch": "mocha --watch-extensions ts --watch",
    "pretty": "prettier --write 'src/**/*.ts' --write 'test/**/*.ts'",
    "precommit": "pretty-quick --staged",
    "postcommit": "git diff --name-only HEAD^ | xargs git add",
    "example:simple": "node-dev -r ts-node/register examples/simple/app.ts",
    "example:typeorm": "node-dev -r ts-node/register examples/typeorm/app.ts"
  },
  "nyc": {
    "extension": [".ts"],
    "include": ["src/**/*.ts"],
    "reporter": ["html"],
    "all": true
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/graphql": "^0.12.3",
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "faker": "^4.1.0",
    "graphql-iso-date": "^3.5.0",
    "husky": "^0.14.3",
    "mocha": "^5.0.0",
    "node-dev": "^3.1.3",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "pretty-quick": "^1.4.1",
    "source-map-support": "^0.5.3",
    "ts-node": "^4.1.0",
    "typedi": "^0.7.0",
    "typescript": "^2.7.1"
  },
  "dependencies": {
    "globby": "^8.0.1",
    "reflect-metadata": "^0.1.12",
    "require-glob": "^3.2.0"
  },
  "peerDependencies": {
    "graphql": "^0.12.0 || ^0.13.0"
  }
}
