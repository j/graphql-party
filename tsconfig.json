{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "module": "commonjs",
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "compileOnSave": false,
    "outDir": "./build/main"
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "./examples", "./test_old"]
}
