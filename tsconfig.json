{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist"
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "./examples", "./test"]
}
